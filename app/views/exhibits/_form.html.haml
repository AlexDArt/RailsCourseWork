= form_for @exhibit do |f|
  - if @exhibit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exhibit.errors.count, "error")} prohibited this exhibit from being saved:"
      %ul
        - @exhibit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :insurance_cost
    = f.number_field :insurance_cost
  .field
    = f.label :age_of_creation
    = f.number_field :age_of_creation
  .field
    = f.label :collection
    = f.text_field :collection
  .field
    = f.label :height
    = f.number_field :height
  .field
    = f.label :width
    = f.number_field :width
  .field
    = f.label :length
    = f.number_field :length
  .field
    = f.label :temp_control
    = f.check_box :temp_control
  .field
    = f.label :humidity_control
    = f.check_box :humidity_control
  .field
    = f.label :people_security
    = f.check_box :people_security
  .actions
    = f.submit 'Save'
